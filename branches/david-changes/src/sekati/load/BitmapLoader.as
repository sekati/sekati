		public class BitmapLoader extends BitmapDataLoader implements ILoader, Cancelable		{				public var smoothing:Boolean;				public function BitmapLoader(request:URLRequest)		{			super(request);		}				/**		 * @inheritDoc		 */				override public function get data():*		{			return new Bitmap(super.data as BitmapData, "auto", smoothing);		}				/**		 * @inheritDoc		 */				override public function reset():void		{			smoothing = false;						super.reset();		}				override public function clone():Object		{			var			loader:BitmapLoader = new BitmapLoader(getURLRequest());						loader.allowTransparency = allowTransparency;						loader.fillColor = fillColor;						loader.smoothing = smoothing;						return loader;		}	}}
// Will trigger "onOut" when the mouse rolls out of the object		}		private function onOver( e : InteractiveScene3DEvent ) : void {			plane.material = ourOverMaterial; // Change the material to "ourOverMaterial"		}		private function onOut( e : InteractiveScene3DEvent ) : void {			plane.material = ourMaterial; // Change the material back to "ourMaterial"		}		private function onPress( e : InteractiveScene3DEvent ) : void {			yawspeed *= -1; // Reverse the yaw speed		}		override protected function processFrame() : void {			plane.yaw( yawspeed );		}							}}
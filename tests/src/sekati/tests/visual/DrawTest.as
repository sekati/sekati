, onUpdate:renderRect} );			function renderRect() : void {				rect.redraw( );			}			//width : Number, height : Number, startX : Number = 0, startY : Number = 0, thickness : Number = THICKNESS, color : uint = COLOR,  alpha : Number = ALPHA, pixelHinting : Boolean = HINTING, scaleMode : String = SCALE_MODE, caps : String = CAPS, joints : String = JOINTS, miterLimit : Number = MITER_LIMIT			addChild( new Rect( 50, 50, 150, 0, 0, 1, 0xffcc00 ) );			var b : BitmapData = new BitmapData( 100, 100 );			var bmp : Bitmap = new Bitmap( b );			addChild( bmp );			Raster.line( b, 0, 0, 75, 75, 0xff00ff );			bmp.bitmapData = b;						// GRADIENT RECT			var grect : GradientRect = new GradientRect( 320, 240, [ 0xffcc00, 0xff00ff ], [ 1, 0.75 ], [ 0, 255 ] );			addChild( grect );					}			}}
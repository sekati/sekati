blic static function getInstance() : ContextMenuManager {			if( _instance == null ) _instance = new ContextMenuManager( new SingletonEnforcer( ) );			return _instance;		}		/**		 * Shorthand singleton accessor getter		 * @return ContextMenuManager		 */		public static function get $() : ContextMenuManager {			return ContextMenuManager.getInstance( );			}		/**		 * Build (or rebuild) the <code>ContextualMenu</code> to display the App info, 		 * credits, controls, fullscreen & other customizations.		 */		public function build() : void {			_menu = new ContextualMenu( Canvas.root );			var appName : String = (StringValidator.isBlank( Configuration.APP_NAME )) ? Configuration.API_NAME + ' Application' : Configuration.APP_NAME; 			var appString : String = (StringValidator.isBlank( Configuration.APP_VERSION )) ? appName : appName + " / v" + Configuration.APP_VERSION;						_menu.addItem( ":: " + appString + " ::" );			if (Configuration.FULLSCREEN_ENABLE) {				var fsCaption : String = "Fullscreen    [Esc]";				KeyManager.$.addKeyListener( fullscreenHandler, false, Keyboard.ESCAPE );				_menu.addItem( fsCaption, fullscreenHandler );			}			if(Configuration.PERFORMANCE_MONITOR_ENABLE) {				var pmCaption : String = "Performance Monitor    [Ctrl + Backspace]";				KeyManager.$.addKeyListener( performanceMonitorHandler, false, Keyboard.CONTROL, Keyboard.BACKSPACE );				_menu.addItem( pmCaption, performanceMonitorHandler );			}						if (Configuration.API_INFO) {				_menu.addItem( "Built with: " + Configuration.API_NAME + " / " + Configuration.API_VERSION, apiHandler );				_menu.addItem( "Player Version Info...", playerInfoHandler, true, true );										_menu.addItem( FlashValidator.playerInfo, null, true, false );			}		}				/**		 * Link player info to <a href="http://www.playerversion.com">www.playerversion.com</a> in <code>ContextMenu</code>.		 */				protected function playerInfoHandler(e : ContextMenuEvent) : void {			NetBase.getURL( 'http://www.playerversion.com/', "_blank" );		}				/**		 * Link API credits in <code>ContextMenu</code>.		 */		protected function apiHandler(e : ContextMenuEvent) : void {			NetBase.getURL( Configuration.API_URL, "_blank" );			}		/**		 * Handle fullscreen <code>ContextMenu</code> selection.		 */		protected function fullscreenHandler(e : ContextMenuEvent = null) : void {			//Logger.$.notice( this, "fullscreenHandler() fired ..." );			StageManager.$.toggleFullscreen( );		}		/**		 * Handle Performance Monitor <code>ContextMenu</code> selection.		 */		protected function performanceMonitorHandler(e : ContextMenuEvent = null) : void {			//Logger.$.notice( this, "performanceMonitorHandler() fired ..." );			PerformanceMonitor.$.toggleDisplay( );		}		/**		 * Return the <code>ContextualMenu</code> for direct manipulation.		 */		public function get menu() : ContextualMenu {			return _menu;			}	}}/** * Internal class is accessible only to this AS file and is used  * as a constructor param to enforce proper Singleton behavior. */internal class SingletonEnforcer {}
@private */		private var _target : Sprite;				/**		 * ApplicationLoader Constructor		 * @param target 	document class instance being loaded.		 */		public function ApplicationLoader(target : Sprite) {			_target = target;			load( );		}		/**		 * Begin checking the SWF load status.		 */		public function load() : void {			FramePulse.$.addFrameListener( enterFrame );		}		/**		 * Frame-based load handler; dispatches <code>BootstrapEvent.APP_LOAD</code> on completion.		 */		protected function enterFrame(e : Event) : void {			_loaded = _target.loaderInfo.bytesLoaded;			_total = _target.loaderInfo.bytesTotal;			_percent = _loaded * 100 / _total;			//trace( "ApplicationLoader: " + loaded + "/" + total + " (" + percent * 100 + "%)" );			if (_loaded >= _total && _percent >= 100) {				Logger.$.info( this, "	@@@ - Loaded Successfully ..." );				FramePulse.$.removeFrameListener( enterFrame );				dispatchEvent( new BootstrapEvent( BootstrapEvent.APP_LOAD ) );			}		}		/**		 * The number of loaded bytes.		 */		public function get bytesLoaded() : uint {			return _loaded;			}		/**		 * The number of total bytes.		 */		public function get bytesTotal() : uint {			return _total;			}		/**		 * The percent loaded.		 */		public function get percent() : Number {			return _percent;			}	}}
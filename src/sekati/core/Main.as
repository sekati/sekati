.init( );			SoundShortcuts.init( );								}		/**		 * Centralize class compositions for core functionalities (bootstraps, managers, etc)		 * @return void		 */			protected function buildCompositions() : void {			trace( "***  Building Compositions ..." );			bootstrap = new Bootstrap( );			var msg : String = "App debug:\n";			msg += "\nCONF_URI: " + Canvas.flashVars["conf_uri"];			msg += "\nCROSSDOMAIN_URI: " + Canvas.flashVars["crossdomain_uri"];			sekati.external.JsBase.alert( msg );			// mem test			var mem : String = Number( System.totalMemory / 1024 / 1024 ).toFixed( 2 ) + 'Mb';			trace( mem ); // eg traces "24.94Mb"		}	}}